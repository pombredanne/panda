<div id="recent-datasets" class="row-fluid">
    <div class="span6">
        <h3>Recently added datasets</h3>
        <% _.each(recent.datasets, function(dataset) { %>
            <h4><a href="#dataset/<%= dataset.slug %>"><%= unescape(dataset.name) %></a></h4>
            <% if (dataset.description) { %><p><em><%= unescape(dataset.description) %></em></p><% } %>
            <p>Created <%= moment(dataset.creation_date, "YYYY-MM-DDTHH:mm:ss").toLocalTimezone().fromNow() %></p>
        <% }); %>
        <% if (recent.meta.total_count > recent.datasets.length) { %>
        <a href="#datasets/all">Browse all <%= recent.meta.total_count %> datasets &raquo;</a>
        <% } %>
    </div>
    <div class="span6">
        <p>Want to see how your PANDA is being used? Visit the <a href="#dashboard">Dashboard</a>!</p>
</div>

